{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "declaration": true,
    "declarationDir": "dist/types",
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "types": ["node", "./env.d.ts"],
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["./*.d.ts", "../render-core/vite-env.d.ts", "./src/*.ts", "src/**/*.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
